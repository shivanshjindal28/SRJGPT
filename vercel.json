{
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/upload",
            "dest": "api/upload.py"
        },
        {
            "src": "/api/query",
            "dest": "api/query.py"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ]
} 